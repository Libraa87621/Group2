<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="USER.login_signin.DangNhapActivity">

    <!-- Top bar with icons and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Menu Icon (left) -->
        <ImageButton
            android:id="@+id/btnimg_menu"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/img_menu"
            android:scaleType="centerInside"
            android:layout_gravity="start" />

        <!-- Title (centered) -->
        <TextView
            android:id="@+id/btn_resign"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginStart="175dp"
            android:layout_marginEnd="10dp"
            android:text="Đăng Nhập"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/btnimg_profile"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/imgprofile"
            android:scaleType="centerInside"
            android:layout_gravity="end"/>

        <!-- Cart Icon -->
        <ImageButton
            android:id="@+id/btnimg_cart"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/imgcart"
            android:scaleType="centerInside"
            android:layout_gravity="end"/>
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập "
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Login Form -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_background"
        android:padding="36dp">

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:textColorHint="#A9A9A9"
            android:hint="Email"
            android:padding="12dp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:drawableEnd="@drawable/eye_icon"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#A9A9A9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Đăng Nhập"
            android:backgroundTint="#FFD700"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/button_background" />

        <TextView
            android:id="@+id/textViewForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="#FF0000"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Create Account Section -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_corner_background2"
        android:padding="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/buttonCreateAccount"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="Tạo tài khoản"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgGmail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/imggmail"
            android:layout_margin="16dp"/>

        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/imgfaceboook"
            android:layout_margin="16dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/imgapple"
            android:layout_margin="16dp"/>
    </LinearLayout>

</LinearLayout>
