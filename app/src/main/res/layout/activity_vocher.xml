<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE5A3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Phần đầu trang với logo và nút đặt hàng -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D50000"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="47dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/img_menu" />

            <Button
                android:id="@+id/order_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="ĐẶT HÀNG"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- Banner quảng cáo chính -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/banner"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop" />


        <!-- Phần quảng cáo tiếp theo với hình ảnh và thông tin đặt hàng -->
        <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/backgroud_mautrangvang"
            android:layout_marginTop="8dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ĐẶT CÀNG NHIỀU ĐƠN, QUÀ CÀNG HẤP DẪN"
                android:textAlignment="center"
                android:textColor="#D50000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/vocher"
                />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin footer hoặc liên hệ"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>