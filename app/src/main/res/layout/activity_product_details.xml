<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context="USER.product.productActivity">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E3D9D9">

        <!-- Menu Icon -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/back"
            android:background="@android:color/transparent" />


        <!-- Order Button -->
        <Button
            android:id="@+id/btn_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FFC107"
            android:text="ĐẶT HÀNG"
            android:textColor="#000000" />
    </RelativeLayout>

    <!-- Product Image -->
    <ImageView
        android:id="@+id/imghome"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:scaleType="centerInside"/>


    <!-- Product Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combo Gà Giòn Vui Vẻ"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Product Price -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="91,000đ"
        android:textSize="24sp"
        android:textColor="#D32F2F"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="8dp" />

    <!-- Order Button -->
    <Button
        android:id="@+id/btnOrder"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="#D32F2F"
        android:text="ĐẶT HÀNG"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="8dp"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#DDDDDD" />
    <!-- Divider -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Nội dung chính của bạn, bao gồm một ScrollView với Banner -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Banner với ImageView -->
                <ViewFlipper
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:flipInterval="3000"
                    android:autoStart="true"
                    android:inAnimation="@anim/slide_in_right"
                    android:outAnimation="@anim/slide_out_left">

                    <!-- Image 1 -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banner1"
                        android:scaleType="centerCrop" />

                    <!-- Image 2 -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banner2"
                        android:scaleType="centerCrop" />

                    <!-- Image 3 -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banner3"
                        android:scaleType="centerCrop" />
                </ViewFlipper>




            </LinearLayout>
        </ScrollView>

        <!-- Footer ở cuối màn hình -->
        <LinearLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#DDDDDD" />

            <!-- Footer -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#D32F2F" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>